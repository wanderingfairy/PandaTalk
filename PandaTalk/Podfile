  pod 'RxKeyboard'

  # For Debug
  pod 'FLEX', :configurations => ['Debug']
  pod 'Gedatsu', configuration: %w(Debug)

  # For Firebase
  pod 'Firebase/Analytics'
  pod 'Firebase/Auth'
  pod 'Firebase/Database'
  pod 'Firebase/Core'
  pod 'FirebaseUI'
  pod 'GoogleSignIn'

  # For RxFirebase
  pod 'RxFirebase/Firestore'
  pod 'RxFirebase/RemoteConfig'
  pod 'RxFirebase/Database'
  pod 'RxFirebase/Storage'
  pod 'RxFirebase/Auth'
  pod 'RxFirebase/Functions'

  # For SkeletonView
  pod "SkeletonView"

  # For MDC
  pod 'MaterialComponents/TextFields'
  pod 'MaterialComponents/Buttons'
  pod 'MaterialComponents/Dialogs'
  pod 'MaterialComponents/ActivityIndicator'
  pod 'MaterialComponents/ProgressView'
  pod 'MaterialComponents/List'
  pod 'MaterialComponents/List+Theming'

  target 'PandaTalkTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'PandaTalkUITests' do
    # Pods for testing
  end

end
